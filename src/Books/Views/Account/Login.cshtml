@using Books.ViewModels;
@model LoginViewModel

<div class="center-container">

	<h2>Вход</h2>

	@if (TempData["ErrorMessage"] != null)
	{
		<div class="alert alert-danger">@TempData["ErrorMessage"]</div>
	}

	<form asp-action="Login" asp-controller="Account" method="post">
		<div class="form-group">
			<input class="form" placeholder="Логин" asp-for="Login" type="text">
		</div>
		<div class="form-group">
			<input class="form" placeholder="Пароль" asp-for="Password" type="text">
		</div>

		<button type="submit" class="btn button">Войти</button>

		<p class="text-center" style="margin-top: 10px;">Еще нет аккаунта? <a href="/Account/Register">Зарегистрироваться</a></p>

	</form>
</div>

