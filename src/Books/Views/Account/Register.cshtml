@using Books.ViewModels;
@model RegisterViewModel

<div class="center-container">

	<h2>Регистрация</h2>

	@if (TempData["ErrorMessage"] != null)
	{
		<div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
	}

	<form asp-action="Register" asp-controller="Account" method="post">
		<div class="form-group">
			<input class="form" placeholder="Логин" asp-for="Login" type="text">
		</div>
		<div class="form-group">
			<input class="form" placeholder="Пароль" asp-for="Password" type="text">
		</div>
		<div class="form-group">
			<input class="form" placeholder="Подтверждение пароля" asp-for="ConfirmPassword" type="text">
		</div>

		<button type="submit" class="btn button">Зарегистрироваться</button>
	</form>

	<p class="text-center" style="margin-top: 10px;">Уже есть аккаунт? <a href="/Account/Login">Войти</a></p>

</div>
