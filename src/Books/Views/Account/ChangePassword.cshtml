@using Books.ViewModels;
@model ChangePasswordViewModel

<div class="center-container">

	<h2>Изменение пароля</h2>

	@if (TempData["ErrorMessage"] != null)
	{
		<div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
	}

	<form asp-action="ChangePassword" asp-controller="Account">
		<div class="form-group">
			<input class="form" placeholder="Старый пароль" asp-for="OldPassword" type="text">
		</div>
		<div class="form-group">
			<input class="form" placeholder="Новый пароль" asp-for="NewPassword" type="text">
		</div>
		<div class="form-group">
			<input class="form" placeholder="Подтверждение пароля" asp-for="ConfirmNewPassword" type="text">
		</div>

		<button type="submit" class="btn button">Изменить пароль</button>
	</form>
</div>
